<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#4BDFF7C5"
    tools:context=".Quiz">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quiz"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_gravity="top"
        android:layout_marginBottom="10dp"
        android:textColor="#4C0CA7"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="12dp"
        android:textColor="#000"
        />

    <EditText
        android:id="@+id/nameETquizID"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="enter name"
        android:textColor="#000"
        android:background="#DEE9F3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rule as"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_weight="1"
            />
        <Spinner
            android:id="@+id/spinnerID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_weight="1"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#A9E1F7A4"
        >
        <TextView
            android:id="@+id/quesOneID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 1: Agree to?"
            android:textSize="12dp"
            android:background="#9C6F80EC"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <RadioButton
                android:id="@+id/radioBtnOneID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textStyle="bold"
                android:text="একমত হওয়া" />

            <RadioButton
                android:id="@+id/radioBtnTwoID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textStyle="bold"
                android:text="দ্বিমত" />
        </RadioGroup>

        <TextView
            android:id="@+id/quesTwoID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 2: Statue? "
            android:textSize="12dp"
            android:background="#9C6F80EC"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <RadioButton
                android:id="@+id/radioBtnThreeID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textStyle="bold"
                android:text="পাথর" />

            <RadioButton
                android:id="@+id/radioBtnFourID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textStyle="bold"
                android:text="মূর্তি" />
        </RadioGroup>

        <TextView
            android:id="@+id/quesThreeID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 3: Aftermath? "
            android:textSize="12dp"
            android:background="#9C6F80EC"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/threeradioGroupID"
            >
            <RadioButton
                android:id="@+id/radioBtnFiveID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textStyle="bold"
                android:text="পরিণতি" />

            <RadioButton
                android:id="@+id/radioBtnSixID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textStyle="bold"
                android:text="শেষ" />
        </RadioGroup>

        <TextView
            android:id="@+id/quesFourID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 4: Plage ? "
            android:textSize="12dp"
            android:background="#9C6F80EC"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <RadioButton
                android:id="@+id/radioBtnSevenID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textStyle="bold"
                android:text="সমুদ্র" />

            <RadioButton
                android:id="@+id/radioBtnEightID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textStyle="bold"
                android:text="সমুদ্রতীর" />
        </RadioGroup>

        <TextView
            android:id="@+id/quesFiveID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 5: Useful?"
            android:textSize="12dp"
            android:background="#9C6F80EC"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FiveradioGroupID">

            <RadioButton
                android:id="@+id/radioBtnNineID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textStyle="bold"
                android:text="প্রয়োজনীয়" />

            <RadioButton
                android:id="@+id/radioBtnTenID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textStyle="bold"
                android:text="প্রয়োজন" />
        </RadioGroup>
    </LinearLayout>



    <Button
        android:id="@+id/submitQuizBtnID"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Submit"
        android:textSize="15dp"
        android:background="@drawable/button_bg_block_stock"
        android:textStyle="italic"
        android:textAllCaps="false" />


</LinearLayout>