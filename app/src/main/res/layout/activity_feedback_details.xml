<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:gravity="center"
    android:background="@drawable/bg5"
    tools:context=".FeedbackDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/list_bg"
        >
        <ListView
            android:id="@+id/feedbackListViewID"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:divider="#0091EA"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/button_bg_block_stock_trasp"
            android:layout_weight="2"/>


        <TextView
            android:id="@+id/feedbackDetTVID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Click on the Word List"
            android:textSize="12dp"
            android:textColor="#000"
            android:gravity="center"
            />

    </LinearLayout>


</LinearLayout>