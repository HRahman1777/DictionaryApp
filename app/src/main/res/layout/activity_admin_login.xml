<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/bg4"
    tools:context=".AdminLogin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login For Admin Panel"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="#5E35B1"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        android:background="@drawable/general_layout_bg"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Username: "
            android:textSize="10dp"
            android:textColor="#000"
            />

        <EditText
            android:id="@+id/usernmETID"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="enter username"
            android:textColor="#000"
            android:gravity="center"
            android:background="#DEE9F3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Password: "
            android:textSize="10dp"
            android:textColor="#000"
            />

        <EditText
            android:id="@+id/paswdETID"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="enter password"
            android:textColor="#000"
            android:gravity="center"
            android:inputType="textPassword"
            />
        <Button
            android:id="@+id/loginBtnID"
            android:textAllCaps="false"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:text="Login"
            android:textSize="20dp"
            android:background="@drawable/button_bg_block_stock_trasp"
            android:textStyle="italic"
            android:layout_gravity="center"
            />


    </LinearLayout>




</LinearLayout>