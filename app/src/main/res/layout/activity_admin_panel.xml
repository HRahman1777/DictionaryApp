<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg3"
    tools:context=".AdminPanel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/general_layout_bg"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Panel"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="top"
            android:layout_marginBottom="10dp"
            android:textColor="#4C0CA7"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Word: "
                android:textSize="10dp"
                android:textColor="#000"
                />
            <EditText
                android:id="@+id/word_apETID"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="word"
                android:textColor="#000"
                android:gravity="center"
                android:background="#DEE9F3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Meaning: "
                android:textSize="10dp"
                android:textColor="#000"
                />
            <EditText
                android:id="@+id/mean_apETID"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="meaning"
                android:textColor="#000"
                android:gravity="center"
                android:background="#DEE9F3"
                />

        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/submit_apBtnID"
            android:textAllCaps="false"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:text="Submit"
            android:textSize="20dp"
            android:background="@drawable/button_bg_block_stock_trasp"
            android:textStyle="italic"
            android:layout_gravity="center"
            />

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/feedback_apBtnID"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:text="View Feedback"
            android:textSize="20dp"
            android:background="@drawable/button_bg_block_stock_trasp"
            android:textStyle="italic"
            android:textAllCaps="false"
            />

    </LinearLayout>

</LinearLayout>